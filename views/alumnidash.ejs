    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarText">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <a class="nav-link" href="/<%=username%>/pastev">PAST EVENTS</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/<%=username%>/post">ADD POSTS</a>
      </li>

      <% if(desig === "Professor") { %>
            <li class="nav-item">
              <a class="nav-link" href="/<%=username%>/add-event" style="color: #ffc107;">ADD EVENT</a>
            </li>
            
            <li class="nav-item">
              <a class="nav-link" href="/<%=username%>/analytics" style="color: #007bff;">ANALYTICS</a>
            </li>
          <% } %>



      <li class="nav-item dropdown">
     <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
         <%=username%>
     </a>
     <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
            <a class="dropdown-item">Name:<%=name%></a>
            <a class="dropdown-item">Designation:<%=desig%></a>
            <a class="dropdown-item">Email:<%=em%></a>
          </div>
        </li>
   <li>
         <form class="" action="/logout" method="post">
           <a><button class="btn btn-success"name="logout">Logout</button></a>
         </form>
   </li>
    </ul>
  </div>
</nav>
<!-- NAVBAR END -->
<br><br>

<div class="container" style="max-width: 600px;">
  <form action="/<%=username%>/aldash" method="GET" class="form-inline">
    <input class="form-control mr-sm-2" type="search" 
           placeholder="Search by name or company" 
           aria-label="Search" 
           name="search" 
           value="<%= searchQuery %>"> <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
  </form>
</div>
<br>
<h1>ALUMNI DETAILS</h1>
<% if(data.length === 0) { %> <h4 class="text-center text-muted">No alumni found.</h4>
<% } else { %>
  <% for(let i=0;i<data.length;i++){ %>
    <% if(data[i].designation === "Alumnus") { %>
      <% } %>
  <% } %>
<% } %>
<!-- CARD START -->
<% for(let i=0;i<data.length;i++){ %>
<% if(data[i].designation === "Alumnus") { %>
<div class="card" style="width: 18rem;">
  <div class="card-header">
    Name:<%=data[i].name1%>
  </div>
  <ul class="list-group list-group-flush">
    
    <% if (data[i].isProfilePrivate && desig === "Student") { %>
      <li class="list-group-item text-muted"><i>This alumnus's contact info is private.</i></li>
    <% } else { %>
      <li class="list-group-item">Email:<%=data[i].email%></li>
      <li class="list-group-item">Phone:<%=data[i].mobile%></li>
    <% } %>
    <% if(data[i].company) { %>
      <li class="list-group-item">Company:<%=data[i].company%></li>
    <% } %>
  </ul>
  
  <div>
    <% if (data[i].isProfilePrivate && desig === "Student") { %>
      <a style="width:100%;" class="btn btn-secondary disabled">Private</a>
    <% } else { %>
      <a style="width:100%;color:red;background-color:#28A745;" target="_blank" href="https://api.whatsapp.com/send?phone=91<%=data[i].mobile%>"><button type="button" class="btn btn-success">WhatsApp</button></a>
    <% } %>
    </div>
</div>
<br>
  </ul>
</div>
<br>
<br>
<% } %>
<% } %>
<!-- CARD END -->
 <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
 <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
  </body>
</html>
