<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width , initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css?family=Roboto+Mono&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/pastev.css">

    <title>Past Events</title>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light">
  <a class="navbar-brand" href="/<%=username%>">ALUMNI MANAGEMENT SYSTEM</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarText">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
     <a class="nav-link" href="/<%=username%>/aldash">ALUMNI INFO</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/<%=username%>/post">ADD POSTS</a>
      </li>
      
     <% if(desig === "Professor") { %>
            <li class="nav-item">
              <a class="nav-link" href="/<%=username%>/add-event" style="color: #ffc107;">ADD EVENT</a>
            </li>
            
            <li class="nav-item">
              <a class="nav-link" href="/<%=username%>/analytics" style="color: #007bff;">ANALYTICS</a>
            </li>
          <% } %>

      <li class="nav-item dropdown">
     <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
         <%=username%>
     </a>
     <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
            <a class="dropdown-item">Name:<%=name%></a>
            <a class="dropdown-item">Designation:<%=desig%></a>
            <a class="dropdown-item">Email:<%=em%></a>
            <div class="dropdown-divider"></div>
            <a class="dropdown-item" href="/<%=username%>/edit">Edit Profile</a>
          </div>
        </li>
   <li>
         <form class="" action="/logout" method="post">
           <a><button class="btn btn-success"name="logout">Logout</button></a>
         </form>
   </li>
    </ul>
  </div>
</nav>
<div class="container" style="max-width: 800px; margin-top: 30px;">
  <h2 class="text-center">Past Events</h2>
  <br>
  
  <% if(eventData.length === 0) { %>
    <h4 class="text-center text-muted">No past events have been added yet.</h4>
  <% } else { %>
    <% for(let i=eventData.length - 1; i >= 0; i--) { %>
      <div class="card mb-4">
        
        <% if(eventData[i].imageLink && eventData[i].imageLink.startsWith('http')) { %>
          <img src="<%= eventData[i].imageLink %>" class="card-img-top" alt="<%= eventData[i].title %>" style="max-height: 400px; object-fit: cover;">
        <% } %>
        
        <div class="card-header d-flex justify-content-between align-items-center">
          <h5 class="card-title mb-0"><%= eventData[i].title %></h5>
          <% if(eventData[i].eventDate) { %>
            <span class="text-muted"><%= eventData[i].eventDate %></span>
          <% } %>
        </div>
        
        <div class="card-body">
          <p class="card-text" style="white-space: pre-wrap;"><%= eventData[i].description %></p>
        </div>
      </div>
      <br>
    <% } %>
  <% } %>
  </div>

<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
 </body>
</html>