<<br><br>

<div class="container" style="max-width: 600px;">
  <form action="/<%=username%>/student-dashboard" method="GET" class="form-inline"> 
    <input class="form-control mr-sm-2" type="search" 
           placeholder="Search by name or company" 
           aria-label="Search" 
           name="search" 
           value="<%= searchQuery %>"> <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
  </form>
</div>
<br>
<h1>ALUMNI DIRECTORY</h1>
<% if(alumniData.length === 0) { %> <h4 class="text-center text-muted">No alumni found.</h4>
<% } else { %>
  <% for(let i=0; i < alumniData.length; i++){ %>
    <% } %>
<% } %>

<% for(let i=0; i < alumniData.length; i++){ %>
  <div class="card" style="width: 18rem;">
    <div class="card-header">
      Name:<%=alumniData[i].name1%>
    </div>
    <ul class="list-group list-group-flush">
    
    <% if (alumniData[i].isProfilePrivate && desig === "Student") { %>
      <li class="list-group-item text-muted"><i>This alumnus's contact info is private.</i></li>
    <% } else { %>
      <li class="list-group-item">Email:<%=alumniData[i].email%></li>
      <li class="list-group-item">Phone:<%=alumniData[i].mobile%></li>
    <% } %>
    <% if(alumniData[i].company) { %>
      <li class="list-group-item">Company:<%=alumniData[i].company%></li>
    <% } %>
  </ul>
  <div>
    
    <% if (alumniData[i].isProfilePrivate && desig === "Student") { %>
      <a style="width:100%;" class="btn btn-secondary disabled">Private</a>
    <% } else { %>
      <a style="width:100%;color:red;background-color:#28A745;" target="_blank" href="https://api.whatsapp.com/send?phone=91<%=alumniData[i].mobile%>"><button type="button" class="btn btn-success">WhatsApp</button></a>
    <% } %>
    </div>
  </div>
  <br>
  <br>
<% } %>
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
 <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
  </body>
</html>